<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:SE2_Language_Replacer.Lib"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SE2_Language_Replacer.MainWindow"
        TransparencyLevelHint="Mica"
        MinHeight="280"
        Height="280"
        MinWidth="360"
        Width="450"
        Title="SE2_Language_Replacer" Padding="8 0 8 8">
    <Grid RowDefinitions="Auto * 20 Auto">
        
        <Grid RowDefinitions="Auto" ColumnSpan="3" ColumnDefinitions="* Auto *" Margin="-48 0">
            <lib:HazardStripes Grid.Column="0" Height="34"
                               VerticalAlignment="Top"
                               LineAngle="-45"
                               Mirrored="True"
                               Foreground="{StaticResource Highlight}" />

            <lib:BeveledBorder Grid.Row="0" Grid.Column="1" Margin="24 0" Padding="32 4" CornerRadius="0 0 32 32"
                               Background="{StaticResource Highlight}">
                <TextBlock Text="Tradutor SE2" FontSize="18" HorizontalAlignment="Center"
                           Foreground="{DynamicResource Black}"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />
            </lib:BeveledBorder>

            <lib:HazardStripes Grid.Row="0" Grid.Column="2" Height="34"
                               VerticalAlignment="Top"
                               LineAngle="-45"
                               Foreground="{StaticResource Highlight}" />
        </Grid>
        
        <StackPanel Grid.Row="1" Margin="8 0" Spacing="2">
            <TextBlock>Selecione o executavel do Space Engineers 2</TextBlock>
