                </TextBox.InnerRightContent>
            </TextBox>
            <Panel Height="32">
                <TextBlock Name="InvalidGamePath" Foreground="Red" FontSize="12">Esse caminho não aparenta conter uma instalação valida do Space Engineers 2</TextBlock>
            </Panel>
              
            <Separator/>
            
            <TextBlock>Selecione um arquivo de tradução</TextBlock>
            <TextBox VerticalAlignment="Center" Name="TranslationPathBox">
                <TextBox.InnerRightContent>
                    <Button Click="PickTranslationLocation" BorderThickness="0" CornerRadius="0 5 5 0">
