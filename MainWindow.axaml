                </TextBox.InnerRightContent>
            </TextBox>
            <Panel Height="32">
                <TextBlock Name="InvalidTranslationPath" Foreground="Red" FontSize="12">Esse arquivo não aparenta ser um arquivo valido de Tradução</TextBlock>
            </Panel>
        </StackPanel>
        
        <ProgressBar Grid.Row="2" Name="ProgressBar" IsIndeterminate="True" VerticalAlignment="Center" Margin="8 0 " IsVisible="False"/>
        
        <Grid  Grid.Row="3" ColumnDefinitions="* *" IsSharedSizeScope="True">
            <Button
                HorizontalAlignment="Center"
                Name="InstallButton"
                MinWidth="64" 
                Click="InstallButton_OnClick">Install</Button>
            
            <Button Grid.Column="1"
                    HorizontalAlignment="Center"
                    Name="LogButton"
                    MinWidth="64"
                    Click="Log_OnClick">Log</Button>
            
            <!--<Button Grid.Column="3"
                    HorizontalAlignment="Center"
                    Name="UninstallButton"
                    MinWidth="64" 
                    Click="UninstallButton_OnClick">Uninstall</Button> -->
        </Grid>
        

    </Grid>
</Window>